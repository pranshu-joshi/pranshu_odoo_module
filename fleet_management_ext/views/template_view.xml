<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_template_form" model="ir.ui.view">
        <field name="name">view.template.form</field>
        <field name="model">extra.company</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="code"/>
                    <field name="company_awards"/>
                    <field name="company_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_template_tree" model="ir.ui.view">
        <field name="name">view.template.tree</field>
        <field name="model">extra.company</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="company_awards"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="action_template" model="ir.actions.act_window">
        <field name="name">extra.company</field>
        <field name="res_model">extra.company</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_extra_company" name="Test Company" action="action_template"
              parent="fleet_management.menu_cars_sub"/>

    <record id="view_extra_suppliers_form" model="ir.ui.view">
        <field name="name">view.extra.suppliers.form</field>
        <field name="model">extra.supplier</field>
        <field name="arch" type="xml">
            <form>
                <group colspan="4" col="4">
                    <field name="code"/>
                    <field name="supplier_list"/>
                </group>
            </form>
        </field>
    </record>
    <record id="view_extra_suppliers_tree" model="ir.ui.view">
        <field name="name">view.extra.suppliers.tree</field>
        <field name="model">extra.supplier</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="supplier_list"/>
            </tree>
        </field>
    </record>

    <record id="action_extra_suppliers" model="ir.actions.act_window">
        <field name="name">Extra Suppliers</field>
        <field name="res_model">extra.supplier</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_extra_supplier" name="Secondary Suppliers" action="action_extra_suppliers"
              parent="fleet_management.menu_cars_sub"/>

</odoo>