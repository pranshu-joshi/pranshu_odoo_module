<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Form view of Wizard -->
    <record id="view_student_xls_report_wiz_form" model="ir.ui.view">
        <field name="name">view.student.xls.report.wiz.form</field>
        <field name="model">car.xls.report.wiz</field>
        <field name="arch" type="xml">
            <form>
                <group colspan="4" col="4">
                    <!--                    <field name="type" required="1"/>-->
                    <field name="type"/>
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="condition"/>
                    <footer>
                        <button name="print_xls_report"
                                string="Print"
                                type="object"
                                class="btn-primary"/>
                        <button special="cancel" string="Close"/>
                    </footer>
                </group>
            </form>
        </field>
    </record>

    <!-- Action of XLS Report -->
    <record id="action_student_xls_report" model="ir.actions.act_window">
        <field name="name">Car XLS</field>
        <field name="res_model">car.xls.report.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu of the XLS Report wizard -->
<!--    <menuitem id="menu_student_xls" action="action_student_xls_report" parent="menu_cars_main"/>-->

    <menuitem id="menu_car_xls_report" name="Reporting" parent="menu_cars_sub" sequence="100"/>

    <!-- Menu for Car Analysis -->
    <menuitem id="menu_student_xls" action="action_student_xls_report" parent="menu_car_report"/>
</odoo>