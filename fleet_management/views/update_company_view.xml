<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_update_comp_val_wiz_form" model="ir.ui.view">
        <field name="name">view.update.comp.val.wiz.form</field>
        <field name="model">update.company</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="company_id"/>
<!--                    <field name="company_age"/>-->
                </group>
                <footer>
                    <!--Ex 7 Ques 6-->
                    <button name="update_comp_val" type="object" class="btn-primary" string="Open Company"/>
                    <button special="cancel" class="btn-danger" string="Close"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_update_comp_val" model="ir.actions.act_window">
        <field name="name">Update Company Valuation</field>
        <field name="res_model">update.company</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>